{
  "name": "hardhat-openzeppelin-defender",
  "version": "1.2.2",
  "description": "Hardhat plugin openzeppelin defender",
  "author": "Danny Jesus Gonzalez Galicia",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/asmel2020/hardhat-openzeppelin-defender"
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "openzeppelin-defender",
    "openzeppelin"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build",
    "update:dependencies": "yarn add defender-admin-client && yarn add defender-autotask-client && yarn add defender-kvstore-client && yarn add defender-sentinel-client && yarn add defender-relay-client"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.38",
    "chai": "^4.2.0",
    "dotenv": "^16.0.1",
    "hardhat": "^2.0.0",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.6.4",
    "defender-admin-client": "^1.27.1",
    "defender-autotask-client": "^1.27.1",
    "defender-autotask-utils": "^1.25.0",
    "defender-base-client": "^1.27.1",
    "defender-kvstore-client": "^1.27.1",
    "defender-relay-client": "^1.27.1",
    "defender-sentinel-client": "^1.27.1"
  }
